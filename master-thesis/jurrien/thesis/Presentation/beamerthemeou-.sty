\RequirePackage{calc}
\RequirePackage{ifthen}
\RequirePackage{cmbright}
\RequirePackage[T1]{fontenc}

\renewcommand*\familydefault{\sfdefault}

\DeclareOptionBeamer{navbar}
{\PassOptionsToPackage{navbar=#1}{beamerouterthemeou}}

\DeclareOptionBeamer{highcontrast}
{\PassOptionsToPackage{highcontrast=#1}{beamerouterthemeou}}

\DeclareOptionBeamer{showpagenr}
{\PassOptionsToPackage{showpagenr=#1}{beamerouterthemeou}}

\DeclareOptionBeamer{footline}
{\PassOptionsToPackage{footline=#1}{beamerouterthemeou}}

\DeclareOptionBeamer{sectionpages}
{\PassOptionsToPackage{sectionpages=#1}{beamerinnerthemeou}}

\DeclareOptionBeamer{tocnrs}
{\PassOptionsToPackage{tocnrs=#1}{beamerinnerthemeou}}

\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\ProcessOptionsBeamer

\mode<presentation>

\useinnertheme{ou}
\useoutertheme{ou}
%\usecolortheme{ou}

\mode<all>
