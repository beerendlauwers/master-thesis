sem TuplePatsR
   | Cons
      lhs  .infer   =   CTuple ( @hd.infer : @tl.inferTl )
           .subst   =   @tl.subst `o` @hd.subst
      lhs  .envFromPats = DM.union @hd.envFromPats @tl.envFromPats
      loc  .inferTl =   case @tl.infer of
                         (CTuple xs) -> xs
